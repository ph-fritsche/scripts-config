{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,

        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ESNext",
        ],

        "moduleResolution": "node",

        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
    },
    "include": [
        "src",
        "test",
        "example",
        "example-consumer",
    ],
    "exclude": [
        "node_modules",
    ],
}
